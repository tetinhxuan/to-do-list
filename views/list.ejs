<%- include('header'); -%>
<div class="box" id="heading"><h1><%= kindOfDay %> !</h1></div>

<div class="box">
  <%newListItems.forEach(function(e){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        value="<%= e._id %>"
        name="checkbox"
        onChange="this.form.submit()"
      />
      <input type="hidden" name="deleteBox" value="<%= kindOfDay %>" />
      <p><%= e.task %></p>
    </div>
  </form>
  <%})%>

  <form action="/" method="post">
    <input
      type="text"
      name="list"
      id="newItem"
      autocomplete="off"
      placeholder="New Item"
    />
    <button type="submit" name="lists" value="<%= kindOfDay %>">+</button>
  </form>
</div>
<%- include('footer'); -%>
